<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @routine.name %></title>
  </head>
  <body>
    <h1><%= @routine.name %></h1>
    <h3><i>Routine Schedule:</i></h3>
    <p>
      <% @routine.days.each do |day| %>
      <%= day.name %> <br>
      <% end %>
    </p>
    <h3><i>Routine Tasks:</i></h3>
    <ul>
      <% @routine.tasks.each do |task| %>
      <li><%= task.name %></li>
      <% end %>
    </ul>
    <a href="/routines/<%= @routine.id %>/edit">Edit Routine</a><br><br><br>
    <a href="/routines/index">View Your Routines</a><br>
    <a href="/users/logout">Logout</a>
  </body>
</html>
